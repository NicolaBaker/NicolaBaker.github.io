<IfModule mod_rewrite.c>
    RewriteEngine On

    # redirige vers 'EN.html'
    RewriteRule ^EN$ EN.html [NC,L]

    # Si une autre requête ne correspond pas à un dossier
    RewriteCond %{EN.html} !-d
    RewriteCond %{EN.html} !-f

    # sans extension vers des fichiers HTML correspondants
    RewriteRule ^([^\.]+)$ $1.html [NC,L]
</IfModule>
